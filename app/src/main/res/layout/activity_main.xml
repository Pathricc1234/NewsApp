<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/helvetica"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:textSize="24dp"
        android:text="Trending Topics"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/helvetica"
        android:textColor="@color/purple_500"
        android:textSize="14dp"
        android:text="Don't Miss Out on What People Are Saying"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/headline_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"></androidx.recyclerview.widget.RecyclerView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="12dp"></androidx.recyclerview.widget.RecyclerView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>