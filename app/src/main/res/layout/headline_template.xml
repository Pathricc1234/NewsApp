<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="12dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp">
    <ImageView
        android:id="@+id/news_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:scaleType="centerCrop"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/top_news_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/helvetica"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:text="News_Headline"></TextView>
        <TextView
            android:id="@+id/top_news_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/helvetica"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:text="Source"></TextView>
        <TextView
            android:id="@+id/top_news_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/helvetica"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:text="Author"></TextView>
        <TextView
            android:id="@+id/top_news_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/purple_500"
            android:text="Date Published"></TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>